<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:layout_marginBottom="@dimen/top"
    app:cardCornerRadius="@dimen/card_corner_cardview"
    android:padding="10dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"



        >
        
        <ImageView
            android:id="@+id/imgFoto2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/dog_pets_puppies_pet_0"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

                <TextView
                    android:id="@+id/tvLikescv2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

            <ImageView
                android:id="@+id/imghueso"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ic_dog" />




        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>