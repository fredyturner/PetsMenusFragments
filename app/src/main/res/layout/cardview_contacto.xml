<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/top"
    app:cardCornerRadius="@dimen/card_corner_cardview"
    android:padding="10dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"


        >
        
        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cat_pet_animal_pet"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

|
            <ImageButton
                android:id="@+id/btnlike"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_bone" />



                <TextView
                    android:id="@+id/tvNombrecv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/nombre_cardview"
                    android:textStyle="bold"
                    android:text="@string/pnombre"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/left"
                    />
                <TextView
                    android:id="@+id/tvLikescv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="120dp"
                    android:textSize="@dimen/nombre_cardview"
                    android:textStyle="bold"
                    />

            <ImageView
                android:id="@+id/imghueso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dog"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                />




        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>